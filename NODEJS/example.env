 # Application Configuration
PORT=3000
HOST=localhost

# Kafka Core Configuration
KAFKA_CLIENT_ID=nodejs-kafka-client
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SSL=false
KAFKA_CONNECTION_TIMEOUT=3000
KAFKA_REQUEST_TIMEOUT=30000
KAFKA_LOG_LEVEL=INFO

# Kafka SASL Authentication (uncomment to enable)
#KAFKA_SASL_MECHANISM=plain
#KAFKA_SASL_USERNAME=user
#KAFKA_SASL_PASSWORD=password

# Kafka REST Proxy Configuration
KAFKA_REST_PROXY_URL=http://localhost:8082
KAFKA_REST_PROXY_TIMEOUT=30000

# Schema Registry Configuration
SCHEMA_REGISTRY_URL=http://localhost:8081

# Kafka Connect Configuration
KAFKA_CONNECT_URL=http://localhost:8083

# Control Center Configuration
CONTROL_CENTER_URL=http://localhost:9021

# KSQLDB Configuration
KSQLDB_URL=http://localhost:8088

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/kafka